# ============================================================
# CodeSwitch Infrastructure Environment Variables
# Copy this file to .env and fill in the values
# ============================================================

# ============================================================
# PostgreSQL
# ============================================================
POSTGRES_USER=codeswitch
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=codeswitch
POSTGRES_PORT=5432

# ============================================================
# Redis
# ============================================================
REDIS_PASSWORD=your_redis_password_here
REDIS_PORT=6379

# ============================================================
# NATS
# ============================================================
NATS_PORT=4222
NATS_HTTP_PORT=8222
NATS_WS_PORT=8223

# ============================================================
# Casdoor (身份认证)
# ============================================================
CASDOOR_PORT=8000
# Casdoor 详细配置见 ./casdoor/app.conf

# ============================================================
# Lago (计费系统)
# ============================================================
LAGO_API_URL=http://localhost:3001
LAGO_API_PORT=3001
LAGO_FRONT_PORT=8080

# Lago 安全密钥 (必须设置，可用 openssl rand -hex 64 生成)
LAGO_SECRET_KEY=your_lago_secret_key_64_chars_minimum_here_please_change_this
LAGO_ENCRYPTION_KEY=your_encryption_key_here
LAGO_ENCRYPTION_DETERMINISTIC_KEY=your_deterministic_key_here
LAGO_ENCRYPTION_SALT=your_salt_here

# Lago RSA 私钥 (用于 Webhook 签名，可选)
# LAGO_RSA_PRIVATE_KEY=

# ============================================================
# gopay 支付配置 (在 CodeSwitch 应用中配置)
# ============================================================
# 支付宝
# ALIPAY_APP_ID=
# ALIPAY_PRIVATE_KEY=
# ALIPAY_PUBLIC_KEY=

# 微信支付
# WECHAT_APP_ID=
# WECHAT_MCH_ID=
# WECHAT_API_KEY=

# ============================================================
# 开发工具 (可选)
# ============================================================
PGADMIN_EMAIL=admin@codeswitch.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050
REDIS_COMMANDER_PORT=8081

# ============================================================
# NEW-API (LLM 网关)
# ============================================================
NEW_API_URL=http://localhost:3000
NEW_API_TOKEN=sk-your-new-api-token
